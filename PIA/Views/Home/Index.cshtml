@using PIA.Entities;
@model List<Publicaciones>
@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<link href="~/Content/HomeIndex.css" rel="stylesheet" />
<link href="~/Content/Propiedades.css" rel="stylesheet" />

<div class="container-fluid page-head">
    <div class="title container">
        <h1>¡Encuentra lo que estás buscando!</h1>
    </div>
</div>


<div class="container home-section">
    <h3 class="section-title">Propiedades Recientes</h3>
    <div class="separator"></div>
    <div class="property-list">
       @foreach(var item in Model)
       {
            <div class="property-th" data-id-publicacion="@item.IdPublicacion">
                <div class="thumbnail">
                    <div class="property-image" style="background-image: url('../../Images/propiedad-thumbnail.jpg')">
                        <label class="property-op">@item.Operaciones.Descripcion</label>
                        <label class="property-type">@item.Propiedades.TiposInmueble.Descripcion</label>
                    </div>
                    <div class="caption">
                        <div class="property-details-head clearfix">
                            <div class="property-titles">
                                <h5 class="property-title truncate">@item.Titulo</h5>
                                <p class="property-subtitle truncate">@item.Propiedades.Ubicaciones.Municipios.Nombre, @item.Propiedades.Ubicaciones.Municipios.Estados.Nombre</p>
                            </div>
                        </div>
                        <div class="propertye-details-extras">
                            <label class="property-char property-rooms">@item.Propiedades.CaracteristicasPropiedad.FirstOrDefault(x => x.IdCaracteristica == 3).Valor </label>
                            <label class="property-char property-baths">@item.Propiedades.CaracteristicasPropiedad.FirstOrDefault(x => x.IdCaracteristica == 4).Valor</label>
                            <label class="property-char property-cars">@item.Propiedades.CaracteristicasPropiedad.FirstOrDefault(x => x.IdCaracteristica == 16).Valor</label>
                        </div>
                        <div class="property-price">
                            <h4 class="price truncate">@item.Precio.ToString("C2") @item.Moneda</h4>
                        </div>
                    </div>
                </div>
            </div>
       }
    </div>
</div>

