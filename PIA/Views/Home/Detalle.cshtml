
@{
    ViewBag.Title = "Detalle";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<link rel="stylesheet" href="~/Content/DetallePropiedad.css" />

<div class="page-head" style="height: auto !important; margin-bottom: 30px;">
    <div class="container">
        <h1>Casa en venta en San Miguel de Allende</h1>
        <p>Av. Avenue, Residencial Tajamar Cancún, QR</p>
    </div>
</div>

<div class="container">
    <div class="property-details col-md-8">
        <div class="property-gallery" >
            <div class="property-image" style="background-image: url('../../Images/propiedad-thumbnail.jpg')"></div>
        </div>
        <div class="property-chars">
            <div class="property-header">
                <h3 class="property-price">$1,165,000.00</h3>
                <div class="property-op">VENTA</div>
            </div>
            <div class="property-char-list">
                <div class="property-char-line">
                    <div class="property-char">
                        <div class="property-char-key">Tipo</div>
                        <div class="property-char-value">Casa</div>
                    </div>
                    <div class="property-char">
                        <div class="property-char-key">Estacionamientos</div>
                        <div class="property-char-value">4</div>
                    </div>
                </div>
                <div class="property-char-line">
                    <div class="property-char">
                        <div class="property-char-key">M<span class="potencia">2</span> de Terreno</div>
                        <div class="property-char-value">150</div>
                    </div>
                    <div class="property-char">
                        <div class="property-char-key">M<span class="potencia">2</span> de Construccion</div>
                        <div class="property-char-value">153</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="property-contact col-md-3 col-md-offset-1">
        <h4>Pedir Informes</h4>
        <p>Llamanos o deja tu informacion</p>
    </div>
</div>